<%- include('./partials/banner'); %>
     
<div id="register-group" class="container user-group">
    <h3>Register</h3>
    <form action="/register" method="POST">
        <div class="form-group">
            <label for="email" class="sr-only">Email Address</label>
            <input class="form-control" name="username" type="email" id="email" placeholder="Email" autofocus></input>
        </div>
        <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input class="form-control" name="password" type="password" id="password" placeholder="Password"></input>
        </div>
        <div class="form-group">
            <label for="password-verify" class="sr-only">Password</label>
            <input class="form-control" name="verifypassword" type="password" id="password-verify" placeholder="Retype Password"></input>
        </div>
        <p id="passwordHelpBlock" class="form-text text-muted">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </p>
        <button id="register" class="btn btn-primary btn-block">Register</button>
    </form>
    <div><a class="btn btn-outline-primary btn-sm account-toggle" href="/login">Login</a></div>
</div>
     
